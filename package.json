{
  "name": "@klickste/set",
  "version": "1.0.2",
  "description": "Stylesheet utilities.",
  "license": "MIT",
  "author": "klickste",
  "repository": {
    "type": "git",
    "url": "https://github.com/klickste/set.git"
  },
  "files": [
    "_media.scss",
    "_support.scss",
    "index.scss"
  ],
  "scripts": {
    "test:dev": "node_modules/.bin/sass tests/style.scss tests/style.css --no-source-map --load-path=./",
    "test:prod": "node_modules/.bin/sass tests/style.scss tests/style.css --style=compressed --no-source-map --load-path=./",
    "test:watch": "node_modules/.bin/sass tests/style.scss tests/style.css --watch --no-source-map --load-path=./",
    "format": "prettier . --write"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "sass": "^1.70.0"
  }
}
